<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".EmergencyRequest"
    android:onClick="hideSoftKeyboard">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/emergencytool"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/toolcolor">

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/emergencytool"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp"
        android:textSize="14dp"
        android:background="@drawable/edittext"
        android:hint="Name"
        android:inputType="text"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@drawable/cursorcolor"/>

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:textSize="14dp"
        android:background="@drawable/edittext"
        android:hint="Contact No"
        android:inputType="number"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@drawable/cursorcolor"/>

    <Button
        android:id="@+id/btnshowmech"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Show Mechanic"
        android:layout_marginTop="30dp"
        android:layout_below="@id/contact"
        android:background="@drawable/buttonly"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

</RelativeLayout>