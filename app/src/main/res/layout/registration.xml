<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="hideSoftKeyboard">

            <TextView
                android:id="@+id/regname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Full Name"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/edittext"
                    android:textColorHint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:layout_below="@+id/regname"
                    android:layout_marginTop="20dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/garagename"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Garage Name"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/colorBlack"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/name"
                    android:background="@drawable/edittext"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/garagename"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:hint="Email Address"
                    android:textColorHint="@color/colorBlack"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="phone"
                    android:hint="Contact No"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:textColorHint="@color/colorBlack"
                    android:layout_below="@id/email"
                    android:background="@drawable/edittext"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />


                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/contact"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/edittext"
                    android:hint="Address"
                    android:textColorHint="@color/colorBlack"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/address"
                    android:background="@drawable/edittext"
                    android:layout_marginEnd="200dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginStart="20dp"
                    android:hint="State"
                    android:textColorHint="@color/colorBlack"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />


                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:textColorHint="@color/colorBlack"
                    android:hint="City"
                    android:paddingRight="20dp"
                    android:layout_below="@id/address"
                    android:layout_toRightOf="@id/state"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginEnd="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:layout_marginStart="-195dp"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/landmark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:paddingRight="20dp"
                    android:layout_below="@id/state"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:background="@drawable/edittext"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="200dp"
                    android:hint="Landmark"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/state"
                    android:layout_toRightOf="@id/landmark"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="-195dp"
                    android:background="@drawable/edittext"
                    android:textColorHint="@color/colorBlack"
                    android:inputType="phone"
                    android:hint="Pincode"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/landmark"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Password"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:textColorHint="@color/colorBlack"
                    android:background="@drawable/edittext"
                    android:textSize="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/pass"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">


                <EditText
                    android:id="@+id/cnfpassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:hint="Confirm Password"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:background="@drawable/edittext"
                    android:textSize="14dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/subject"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="212dp"
                android:background="#F5F5F5"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="BeesMOTO : Successfull Registration"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/Message"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="199dp"
                android:background="#F5F5F5"
                android:ems="10"
                android:inputType="textPersonName"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/cpassword"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/buttonly"
                android:text="Register"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"
                android:textStyle="bold"/>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>