<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EDEDED">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/GARAGENAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="garage:" />

            <TextView
                android:id="@+id/EMAILID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/GARAGENAME"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="email:" />

            <TextView
                android:id="@+id/CONTACT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_below="@id/EMAILID"
                android:text="contact:" />

            <TextView
                android:id="@+id/CITY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_below="@id/CONTACT"
                android:text="City:" />

            <TextView
                android:id="@+id/LANDMARK"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_below="@id/CITY"
                android:text="City" />

            <TextView
                android:id="@+id/PINCODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_below="@id/LANDMARK"
                android:text="Pincode" />

            <CheckBox
                android:id="@+id/select"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/CITY"
                android:layout_alignParentLeft="true"
                android:buttonTint="@color/colorblue"
                android:layout_toRightOf="@id/CITY"
                android:layout_marginLeft="280dp" />

            <RatingBar
                android:id="@+id/mechrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:progressTint="@color/colorblue"
                android:transformPivotX="0dp"
                android:transformPivotY="5dp"
                android:scaleY="0.8"
                android:secondaryProgressTint="@color/float_transparent"
                android:scaleX="0.8"
                android:stepSize="0.1"
                android:layout_below="@id/PINCODE"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>