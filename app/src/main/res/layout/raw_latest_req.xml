<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EDEDED">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/reqemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="Contact:" />

                <TextView
                    android:id="@+id/reqname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reqemail"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="Contact:" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reqname"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="Contact:" />

                <TextView
                    android:id="@+id/bike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_below="@id/contact"
                    android:text="Bike Model:" />

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_below="@id/bike"
                    android:text="Service Type:" />

                <TextView
                    android:id="@+id/landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_below="@id/service"
                    android:text="" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_below="@id/landmark"
                    android:text="City" />

                <TextView
                    android:id="@+id/pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_below="@id/city"
                    android:text="" />

                <TextView
                    android:id="@+id/apmtdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_below="@id/pincode"
                    android:text="" />

            <TextView
                android:id="@+id/apmtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_below="@id/apmtdt"
                android:text="" />

                <Button
                    android:id="@+id/mechanic"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/service"
                    android:layout_alignParentLeft="true"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="250dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toRightOf="@id/city"
                    android:background="@drawable/buttonly2"
                    android:text="Approve" />

                <TextView
                    android:id="@+id/reqid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pincode"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/reqstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pincode"
                    android:visibility="gone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>