<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EDEDED">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/umemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/contgarage"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_below="@id/umemail"/>

                <TextView
                    android:id="@+id/bmodel"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_below="@id/contgarage"/>

                <TextView
                    android:id="@+id/bservice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="TextView"
                    android:layout_below="@id/bmodel"/>

                <TextView
                    android:id="@+id/request_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="TextView"
                    android:layout_below="@id/bservice"/>

                <TextView
                    android:id="@+id/adate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:text="TextView"
                    android:layout_below="@id/request_type"/>

                <TextView
                    android:id="@+id/wtime"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_below="@id/adate"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>