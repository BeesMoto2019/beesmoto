<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/titlefeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Order Details"/>

    <ImageView
        android:id="@+id/closewindow"
        android:layout_marginTop="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/close"
        android:layout_toRightOf="@id/titlefeedback"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="335dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/usrtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:paddingLeft="5dp"
        android:layout_below="@id/titlefeedback"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/userdetails"
        android:layout_width="match_parent"
        android:layout_below="@+id/usrtitle"
        android:layout_marginTop="5dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EDEDED">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/usercontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/username"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/titlemech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/usercontact"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:text="Mechanic : "
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/mechrate"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/titlemech"
                android:layout_below="@id/usercontact"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:progressTint="@color/colorblue"
                android:isIndicator="true"
                android:transformPivotX="0dp"
                android:transformPivotY="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingLeft="5dp"
                android:scaleY="0.8"
                android:secondaryProgressTint="@color/float_transparent"
                android:scaleX="0.8"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/titleapp"
                android:layout_below="@id/titlemech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Application : "
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <RatingBar
                android:id="@+id/apprate"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlemech"
                android:isIndicator="true"
                android:layout_toRightOf="@id/titleapp"
                android:backgroundTint="@color/colorWhite"
                android:progressTint="@color/colorblue"
                android:transformPivotX="0dp"
                android:transformPivotY="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleY="0.8"
                android:secondaryProgressTint="@color/float_transparent"
                android:scaleX="0.8"
                android:stepSize="0.1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mechTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mechanic Information"
        android:paddingLeft="5dp"
        android:layout_below="@id/userdetails"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/mechdetails"
        android:layout_width="match_parent"
        android:layout_below="@+id/mechTitle"
        android:layout_marginTop="5dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EDEDED">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mechname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/mechgarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mechname"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/mechcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mechgarage"
                android:paddingLeft="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_marginTop="5dp"/>

            <RatingBar
                android:id="@+id/rate"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mechcontact"
                android:paddingLeft="5dp"
                android:isIndicator="true"
                android:backgroundTint="@color/colorWhite"
                android:progressTint="@color/colorblue"
                android:transformPivotX="0dp"
                android:transformPivotY="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleY="0.8"
                android:secondaryProgressTint="@color/float_transparent"
                android:scaleX="0.8"
                android:stepSize="0.1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ordrtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Information"
        android:paddingLeft="5dp"
        android:layout_below="@id/mechdetails"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/ordrdetails"
        android:layout_width="match_parent"
        android:layout_below="@+id/ordrtitle"
        android:layout_marginTop="5dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EDEDED">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reqtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/usrbike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reqtype"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/usrsrvc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/usrbike"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/reqdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_below="@id/usrsrvc"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/reqtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/reqdate"
                android:layout_alignParentLeft="true"
                android:textSize="14dp"
                android:layout_marginLeft="180dp"
                android:layout_below="@id/usrsrvc"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_below="@id/reqdate"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/appointmenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="180dp"
                android:layout_below="@id/reqdate"
                android:layout_toRightOf="@id/appointment"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_below="@id/appointment"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/Pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_below="@id/appointment"
                android:layout_toRightOf="@+id/land"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/wrktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/appointment"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>